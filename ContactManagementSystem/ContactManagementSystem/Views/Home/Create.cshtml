@{
    ViewData["Title"] = "Add New Contact";
}

<div class="text-center">
    <h1 class="display-4">Add New Contact</h1>
    <p class="lead">Fill in the details below to add a new contact to your list.</p>
</div>

@model ContactManagementSystem.Models.Contact

<form id="contactForm" asp-action="Create" method="post" class="mt-4 w-50 mx-auto">
    
    <div class="form-group">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label asp-for="Name" class="font-weight-bold">Name</label>
        <input asp-for="Name" id="Name" class="form-control form-control-sm" placeholder="Enter the name" />
        <span id="nameError" asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address" class="font-weight-bold">Address</label>
        <input asp-for="Address" id="Address" class="form-control form-control-sm" placeholder="Enter the address" />
        <span id="addressError" asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber" class="font-weight-bold">Number</label>
        <input asp-for="PhoneNumber" id="PhoneNumber" class="form-control form-control-sm" placeholder="Enter the number" />
        <span id="phoneError" asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>


    <button type="submit" class="btn btn-success btn-sm btn-block mt-3 mb-3">Add Contact</button>
    <button type="button" class="btn btn-secondary btn-sm btn-block mt-3 mb-3" onclick="location.href='@Url.Action("Index")'">Cancel</button>
</form>

<script>
    function validateForm(event) {
        var name = document.getElementById("Name").value.trim();
        var address = document.getElementById("Address").value.trim();
        var phoneNumber = document.getElementById("PhoneNumber").value.trim();
        var nameError = document.getElementById("nameError");
        var addressError = document.getElementById("addressError");
        var phoneError = document.getElementById("phoneError");

        nameError.innerText = '';
        addressError.innerText = '';
        phoneError.innerText = '';
        document.getElementById("Name").style.border = '1px solid #ced4da';
        document.getElementById("Address").style.border = '1px solid #ced4da';
        document.getElementById("PhoneNumber").style.border = '1px solid #ced4da';

        if (name === '') {
            nameError.innerText = 'Name is required.';
            document.getElementById("Name").style.border = '1px solid red';
        }

        if (phoneNumber === '') {
            phoneError.innerText = 'Number is required.';
            document.getElementById("PhoneNumber").style.border = '1px solid red';
        }

        if (address === "") {
            addressError.innerText = "Address is required";
            document.getElementById("Address").style.border = '1px solid red';
        }

        if (name === '' || phoneNumber === '' || address === '') {
            event.preventDefault();
        }
    }

    document.getElementById("contactForm").addEventListener("submit", validateForm);
</script>
