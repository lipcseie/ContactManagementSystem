@{
    ViewData["Title"] = "Add New Contact";
}

<div class="text-center">
    <h1 class="display-4">Add New Contact</h1>
    <p class="lead">Fill in the details below to add a new contact to your list.</p>
</div>

@model ContactManagementSystem.Entities.Models.Contact

<form id="contactForm" asp-action="Create" method="post" class="mt-4 w-50 mx-auto">
    
    <div class="form-group">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label asp-for="Name" class="font-weight-bold">Name</label>
        <input asp-for="Name" id="Name" class="form-control form-control-sm" placeholder="Enter the name" />
        <span id="nameError" asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber" class="font-weight-bold">Number</label>
        <input asp-for="PhoneNumber" id="PhoneNumber" class="form-control form-control-sm" placeholder="Enter the number" />
        <span id="phoneError" asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address" class="font-weight-bold">Address</label>
        <input asp-for="Address" id="Address" class="form-control form-control-sm" placeholder="Enter the address" />
        <span id="addressError" asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="City" class="font-weight-bold">City</label>
        <input asp-for="City" id="City" class="form-control form-control-sm" placeholder="Enter the city" />
        <span id="cityError" asp-validation-for="City" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Zip" class="font-weight-bold">Zip</label>
        <input asp-for="Zip" id="Zip" class="form-control form-control-sm" placeholder="Enter the zip" />
        <span id="zipError" asp-validation-for="Zip" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Country" class="font-weight-bold">Country</label>
        <input asp-for="Country" id="Zip" class="form-control form-control-sm" placeholder="Enter the country" />
        <span id="countryError" asp-validation-for="Country" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary btn-sm btn-block mt-3 mb-3">Add Contact</button>
    <button type="button" class="btn btn-outline-secondary border btn-sm btn-block mt-3 mb-3" onclick="location.href='@Url.Action("Index")'">Cancel</button>
</form>

<script>
    function validateForm(event) {
        var name = document.getElementById("Name").value.trim();
        var address = document.getElementById("Address").value.trim();
        var phoneNumber = document.getElementById("PhoneNumber").value.trim();
        var city = document.getElementById("City").value.trim();
        var zip = document.getElementById("Zip").value.trim();
        var country = document.getElementById("country").value.trim();

        var nameError = document.getElementById("nameError");
        var addressError = document.getElementById("addressError");
        var phoneError = document.getElementById("phoneError");
        var cityError = document.getElementById("cityError");
        var zipError = document.getElementById("zipError");
        var countryError = document.getElementById("countryError");

        nameError.innerText = '';
        addressError.innerText = '';
        phoneError.innerText = '';
        cityError.innerText = '';
        zipError.innerText = '';
        countryError.innerText = '';

        document.getElementById("Name").style.border = '1px solid #ced4da';
        document.getElementById("Address").style.border = '1px solid #ced4da';
        document.getElementById("PhoneNumber").style.border = '1px solid #ced4da';
        document.getElementById("City").style.border = '1px solid #ced4da';
        document.getElementById("Zip").style.border = '1px solid #ced4da';
        document.getElementById("Country").style.border = '1px solid #ced4da';

        if (name === '') {
            nameError.innerText = 'Name is required.';
            document.getElementById("Name").style.border = '1px solid red';
        }

        if (phoneNumber === '') {
            phoneError.innerText = 'Number is required.';
            document.getElementById("PhoneNumber").style.border = '1px solid red';
        }

        if (address === "") {
            addressError.innerText = "Address is required";
            document.getElementById("Address").style.border = '1px solid red';
        }

        if (city === "") {
            addressError.innerText = "City is required";
            document.getElementById("City").style.border = '1px solid red';
        }

        if (zip === "") {
            addressError.innerText = "Zip is required";
            document.getElementById("Zip").style.border = '1px solid red';
        }

        if (country === "") {
            addressError.innerText = "Country is required";
            document.getElementById("Country").style.border = '1px solid red';
        }

        if (name === '' || phoneNumber === '' || address === '' || city === '' || zip === '') {
            event.preventDefault();
        }
    }

    document.getElementById("contactForm").addEventListener("submit", validateForm);
</script>
