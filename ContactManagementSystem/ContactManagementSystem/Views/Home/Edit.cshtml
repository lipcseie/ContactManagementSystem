@model ContactManagementSystem.Models.Contact

<div class="text-center">
    <h1 class="display-4">Edit Contact</h1>
</div>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-isRequired"></span>
    </div>

    <div class="form-group">
        <label asp-for="City"></label>
        <input asp-for="City" class="form-control" />
        <span asp-validation-for="City" class="text-isRequired"></span>
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber">Number</label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-isRequired"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>